mixin section(section_name, data)
	.section
		h2 #{section_name}
		- for (var i in data) {
			- var d = data[i]
			.element
				h3=  d.what
				- if (d.when) {
					div= d.interval[0] + " – "+ d.interval[1]
				- }
				ul
					- for (var j in d.comment)
						li= d.comment[j]
				- if (d.where)
					p
						<strong>#{d.where.name}</strong>
						| <br/>
						| #{d.where.where} 
						| <br/>
						| #{d.where.about}
		- }
!!!
html
	head
		meta(charset="utf-8")
		title Cristián Arenas Ulloa
		link(type="text/css",rel="stylesheet",href="http://foundation.zurb.com/assets/css/marketing.css")

	body
		.row
			section.small-12.columns
				h1= who
				dl
					- for (var meta in contact)
						dt= meta
						dd= contact[meta]
			mixin section("Education", studies)
			mixin section("Work Experience", work)

		.row
			section.small-12.columns
				h2 Skills
				.row
				- for (var skill_category in skills) {
					- var s = skills[skill_category]
					mixin section(skill_category, s)
				- }
			mixin section("Extracurricular Activities", extra)

