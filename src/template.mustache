mixin section(section_name, data)
	.section.row
		h2 #{section_name}
		{{#extra}}
			.small-4.columns
				h4 {{what}}
				div {{interval[0]}} – {{interval[1]}}
				{{#where}}
				p.has-tip(data-tooltip="",
					title "<strong>{{where.fullname}}</strong>, {{where.where}} <br/> {{where.comment[0]}}")
					|  @ {{where.name}}
				{{/where}}
			.small-8.columns
				ul
				{{#comment}}
					li {{comment}}
					{{/comment}}
		{{/extra}}
